# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                         controllers.Registration.newSignup

# GET         /*file                    controllers.Assets.at(path="/public", file)

# People
# People
GET         /signup                   controllers.Registration.newSignup
POST        /signup                   controllers.Registration.createSignup
POST        /signup/:id/delete        controllers.Registration.deleteSignup(id: Long)
GET         /people                   controllers.Registration.people
GET         /person/:id               controllers.Registration.show(id: Long)
# POST        /successSignup              controllers.Registration.signupSuccess

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.at(path="/public", file)
GET         /webjars/*file            controllers.WebJarAssets.at(file)